{
  "compileOnSave": false,
  "compilerOptions": {
    "incremental": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "rxjs-polling": [
        "dist/rxjs-polling"
      ],
      "rxjs-polling/*": [
        "dist/rxjs-polling/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
